{
   "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2017",
      "lib": ["ES2017"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "rootDir": "src/",
      "outDir": "dist/",
      "inlineSourceMap": true,
      "removeComments": true
   },
   "exclude": ["node_modules", "**/node_modules/*", ".*"]
}
